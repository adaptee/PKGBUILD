# Maintainer: vicky91 <vickypaiers@gmail.com>
pkgname=qterminal-git
pkgver=20130302
pkgrel=1
pkgdesc="Light QT-based  terminal emulator"
arch=('i686' 'x86_64')
url="https://github.com/qterminal/qterminal"
license=('GPL2')
depends=('qtermwidget-git')
makedepends=('git')
install=

_gitroot=https://github.com/qterminal/qterminal.git
_gitname=qterminal

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DQT_QMAKE_EXECUTABLE=qmake4 .
  make

}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
