# Basically, stolen shamelessly from http://chakra-probject.org/ccr

pkgname=vim-qt-git
pkgver=20111022
pkgrel=1
pkgdesc="A Qt powered vim GUI"
arch=("i686" "x86_64")
url="http://code.google.com/p/vim-qt/"
license=('custom:vim')
depends=('qt' 'vim-runtime' 'gpm' 'perl' 'python>=2.7.1' 'ruby' 'libxt'
         'desktop-file-utils' )
makedepends=('gpm' 'perl' 'python2>=2.7.1' 'ruby' 'libxt' 'desktop-file-utils' 'qt'
             'gettext' 'pkgconfig' 'rsync' 'sed' 'git')
source=(qvim.desktop
        qvim.svg)
options=(!strip)
install="${pkgname}.install"

_gitroot="git://gitorious.org/vim-qt/vim-qt.git"
_gitname="vim-qt"

_builddir=vim-qt-build
_versiondir=vim73

build() {
  cd ${srcdir}
  msg "Connecting to GIT server...."

  if [ -d ${_gitname}/.git ] ; then
    cd ${_gitname}

    # Change remote url to anongit
    if [ -z $( git branch -v | grep anongit ) ] ; then
        git remote set-url origin ${_gitroot}
    fi

    # temporary work around 
    git checkout master

    git pull origin

    # temporary work around 
    git checkout 146aab68ec0a0bb4514c565b0a5f0657b42000eb

    msg "The local files are updated."
  else
    git clone ${_gitroot} ${_gitname}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cd ${srcdir}
  rm -rf vim-qt-build
  rsync -a --exclude='.git/' ${_gitname}/ vim-qt-build

  msg2 'Patching...'

  # define the place for the global (g)vimrc file (set to /etc/vimrc)
  sed -i 's|^.*\(#define SYS_.*VIMRC_FILE.*"\) .*$|\1|' \
    vim-qt-build/src/feature.h
  sed -i 's|^.*\(#define VIMRC_FILE.*"\) .*$|\1|' \
    vim-qt-build/src/feature.h
  # fix python name
  sed -i -e 's|vi_cv_path_python, python|vi_cv_path_python, python2|' \
    vim-qt-build/src/configure.in
  (cd vim-qt-build/src && autoconf)

  msg2 'Building...'

  cd ${srcdir}/${_builddir}

  export CFLAGS="-g -O0"
  export CXXFLAGS="-g -O0"

  ./configure \
  --prefix=/usr \
  --localstatedir=/var/lib/vim \
  --mandir=/usr/share/man \
  --with-compiledby=Archlinux \
  --with-features=big \
  --enable-gpm \
  --enable-acl \
  --with-x=yes \
  --with-tlib=ncurses \
  --enable-gui=qt \
  --enable-multibyte \
  --enable-cscope \
  --enable-netbeans \
  --enable-perlinterp \
  --enable-pythoninterp \
  --enable-rubyinterp \

  make
}

package(){
  cd ${srcdir}/${_builddir}

  # Yes, I know gvim stands for `graphical vim`, not `gtk vim`
  # Whatever, jut name it as qvim.
  install -D src/vim ${pkgdir}/usr/bin/qvim

  # desktop entry
  install -Dm644 ${srcdir}/qvim.desktop \
      ${pkgdir}/usr/share/applications/qvim.desktop

  # and the nice icon!
  install -Dm644 "${srcdir}/qvim.svg" \
      "${pkgdir}/usr/share/icons/hicolor/scalable/apps/qvim.svg"
}

# vim: set sw=2:

md5sums=('48d76291214e5ef81bc0812d6346f391'
         '58c3f5ca063bd624b9feb5942e4f2adf')
